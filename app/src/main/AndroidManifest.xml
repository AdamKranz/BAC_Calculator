<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="purdue.team.wildhacks.bac_calculator">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserInput"
            android:label="@string/title_activity_user_input"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BAC_Caclulator"
            android:label="@string/title_activity_bac__caclulator"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".advicePop"
            android:theme="@style/AppTheme.CustomTheme">
        </activity>
    </application>

</manifest>
